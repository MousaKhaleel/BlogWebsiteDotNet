@{
}

@model List<BlogWebsiteDotNet.Models.Blog>

<head>
    <style>
        .blogPreviewContainer {
            display: flex;
            background: rgb(247,247,247);
            margin-block: 10px;
            border-radius: 4px;
            padding: 1%;
        }

            .blogPreviewContainer img {
                border-radius: 4px;
            }

            .blogPreviewContainer:hover {
                background: rgb(228, 228, 228);
            }
    </style>
</head>

@foreach (var blog in Model)
{
    <span class="link">
        <a asp-action="BlogDetails" asp-route-id="@blog.Id">
            <div class="blogPreviewContainer" style="background: #fff; color: #333;">
                <div>
                    <h2>@blog.BlogTitle</h2>
                    <hr />
                    <br />
                    <p>@blog.BlogPreview</p>
                </div>
            </div>
        </a>
    </span>
}